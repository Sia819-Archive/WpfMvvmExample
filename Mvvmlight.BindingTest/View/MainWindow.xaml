<Window x:Class="Mvvmlight.BindingTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:Mvvmlight.BindingTest.ViewModel"
        xmlns:local="clr-namespace:Mvvmlight.BindingTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="350">
    <Window.DataContext>
        <viewmodel:MainWindowViewModel/>
    </Window.DataContext>
    
    <StackPanel>
        
        <TextBlock Text="{Binding Text, Mode=OneWay}"
                   Margin="5"/>
        <TextBox Text="{Binding Text, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged, FallbackValue='You can change some value.'}"
                 Margin="5"/>
        <Button Command="{Binding Test_Button}"
                Content="Binded" 
                Margin="5"/>

    </StackPanel>
</Window>
