<UserControl x:Class="MvvmExample.View.UserControlPage1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MvvmExample.View"
             mc:Ignorable="d" 
             d:Height="450" d:Width="800"
             d:Background="White"
             xmlns:vm="clr-namespace:MvvmExample.ViewModel"
             d:DataContext="{d:DesignInstance Type=vm:Page1ViewModel, IsDesignTimeCreatable=True}">
    <StackPanel>

        <GroupBox Header="Text Binding"
                  BorderBrush="Gray"
                  Margin="10">
            <Grid Margin="10" HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MaxWidth="1000" />
                    <!--https://stackoverflow.com/questions/39126009/bind-maxwidth-to-calculated-auto-value-->
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <!--Grid.RowSpan="{Binding Path=RowDefinitions.Count, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Grid}}}"-->
                <Path Grid.Column="1" Grid.Row="0" Grid.RowSpan="100"
                      Data="M0,0 0,1 1,1 1,0 z" 
                      Fill="Gray"
                      StrokeThickness="0"
                      Stretch="Fill"
                      HorizontalAlignment="Left" 
                      VerticalAlignment="Stretch"
                      Width="1"
                      UseLayoutRounding="True"
                      Margin="5 0"/>

                <TextBlock Grid.Column="0" Grid.Row="0"
                           Text="Text is bound in ViewModel String Property"
                           x:Name="TextBindingDescription1"
                           HorizontalAlignment="Right"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"
                           Margin="10"/>

                <TextBlock Grid.Column="2" Grid.Row="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Margin="10"
                           Text="{Binding TextBinding_Text}"/>

                <TextBlock Grid.Column="0" Grid.Row="1"
                           x:Name="TextBindingDescription2"
                           Text="You can change the ViewModel Text Property by entering text."
                           TextWrapping="Wrap"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="10"/>
                <TextBox Grid.Column="2" Grid.Row="1"
                         Text="{Binding TextBinding_Text, TargetNullValue='1', UpdateSourceTrigger=PropertyChanged}"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Center"
                         Padding="3"
                         Margin="10" />
            </Grid>
        </GroupBox>

        <GroupBox Header="Button Command Binding"
                  BorderBrush="Gray"
                  Margin="10">
            <Grid Margin="10" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MaxWidth="100"/>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Path Grid.Column="1" Grid.Row="0" Grid.RowSpan="100"
                      Data="M0,0 0,1 1,1 1,0 z" 
                      Fill="Gray"
                      StrokeThickness="0"
                      Stretch="Fill"
                      HorizontalAlignment="Left" 
                      VerticalAlignment="Stretch"
                      Width="1"
                      UseLayoutRounding="True"
                      Margin="5 0"
                      />

                <TextBlock Grid.Column="0" Grid.Row="0"
                           Text="Text to "
                           HorizontalAlignment="Right"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"
                           Margin="10"/>
                <TextBox Grid.Column="2" Grid.Row="0"
                         Text="{Binding CommandBinding_Text}"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Center"
                             MinWidth="200"
                         Padding="3"
                         Margin="10"/>

                <TextBlock Grid.Column="0" Grid.Row="1"
                           Text="Click Button"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="10"/>
                <Button Grid.Column="2" Grid.Row="1" Content="Click to show MessageBox"
                        Command="{Binding BtnCmd_Click}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Padding="3"
                        Margin="10"
                        />
            </Grid>
            <!--<Rectangle Fill="Green"/>-->
        </GroupBox>

        

    </StackPanel>
</UserControl>